@model Coach

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-warning bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black py-2">Delete Coach</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="col-10">
                <div class="p-3">
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Name" class="form-control border shadow" disabled />
                        <label asp-for="Name" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Description" class="form-control border shadow" disabled />
                        <label asp-for="Description" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Price" class="form-control border shadow" disabled />
                        <label asp-for="Price" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Contact" class="form-control border shadow" disabled />
                        <label asp-for="Contact" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Occupancy" class="form-control border shadow" disabled />
                        <label asp-for="Occupancy" class="ms-2"></label>
                        <small class="form-text text-muted" style="color: gray; font-size: 11px; margin-left: 10px;">
                            Maximum number of people that the coach can handle in a single session.
                        </small>
                    </div>
                    <div class="form-floating py-1 col-12">
                        @* <input asp-for="Image" class="form-control border shadow" />
                        <input asp-for="ImageUrl" hidden class="form-control border shadow" /> *@
                        <input asp-for="ImageUrl" class="form-control border shadow" disabled />
                        <label asp-for="ImageUrl" class="ms-2"></label>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-trash-fill"></i> Delete
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Coach" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Model.ImageUrl" class="rounded"
                     style="border-radius:5px; border:1px solid #bbb9b9; width: 100%" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}