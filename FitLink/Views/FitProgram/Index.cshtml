@model IEnumerable<FitProgram>

<h1>Fit Programs List</h1>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-warning bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black py-2">Fit Program List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="FitProgram" asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Create New Program
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>Name</th>
                    <th>Coach Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.Id
                        </td>
                        <td>@obj.Name</td>
                        <td>@obj.Coach.Name</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="FitProgram" asp-action="Update" asp-route-FitProgramId="@obj.Id"
                                   class="btn btn-warning mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="FitProgram" asp-action="Delete" asp-route-FitProgramId="@obj.Id"
                                   class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>